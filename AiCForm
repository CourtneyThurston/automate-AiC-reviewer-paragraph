        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular.min.js"></script>


    <script>
    $(document).ready(function(){

            $("[type=checkbox]").change(function() {

                var msg = "";

                $('input:checked').each(function(i,v){
                    msg += $(v).val() + "\n";
                });


                $("#remarks").val(msg);   
             });
    });
    </script>

